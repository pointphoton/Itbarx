<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/main_bg"
              android:orientation="vertical"
              android:weightSum="600">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="50"
        android:background="@color/toolbar_bg"
        android:orientation="horizontal"
        android:weightSum="10">

        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible"
            />


        <com.itbarx.custom.component.TextViewRegular
            android:id="@+id/bark_activity_screen_toolbar_textView"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="@string/bark_activity_screen_toolbar_text"
            android:textColor="@color/white"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="350"

        >
        <ImageView
            android:id="@+id/bark_activity_screen_name_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
           android:scaleType="centerCrop"
            android:src="@drawable/thumbnail"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/row_fragment_timeline_screen_video_thumbnail_play_ImageView"
            android:layout_centerInParent="true"
            android:src="@drawable/bark_play_icon"
            android:padding="120dip"
            android:scaleType="centerInside"
            android:clickable="true"
            android:visibility="visible"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/row_fragment_timeline_screen_video_thumbnail_pause_ImageView"
            android:layout_centerInParent="true"
            android:src="@drawable/bark_pause_icon"
            android:padding="120dip"
            android:scaleType="centerInside"
            android:clickable="true"
            android:visibility="gone"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="100"
        android:background="#F89938"

        >
        <com.itbarx.custom.component.TextViewRegular
            android:id="@+id/bark_activity_screen_subtitle_TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/white"
android:text="@string/web_ipsum_text"
            />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="49"
        android:background="#F89938"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="20"
            >
            <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="9"
            >
                <com.itbarx.custom.component.TextViewBold
                    android:id="@+id/bark_activity_screen_like_count_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="106"
                    android:textColor="@color/white"

                    />

            </RelativeLayout>
            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"
                />

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="9"
                >
                <com.itbarx.custom.component.TextViewBold
                    android:id="@+id/bark_activity_screen_like_text_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Like"
                    android:textColor="@color/white"

                    />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="20"
            >
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="9"
                >
                <com.itbarx.custom.component.TextViewBold
                    android:id="@+id/bark_activity_screen_rebark_count_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="106"
                    android:textColor="@color/white"

                    />

            </RelativeLayout>
            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"
                />

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="9"
                >
                <com.itbarx.custom.component.TextViewBold
                    android:id="@+id/bark_activity_screen_rebark_text_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Like"
                    android:textColor="@color/white"

                    />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="20"
            >
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="9"
                >
                <com.itbarx.custom.component.TextViewBold
                    android:id="@+id/bark_activity_screen_reply_count_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="106"
                    android:textColor="@color/white"

                    />

            </RelativeLayout>
            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"
                />

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="9"
                >
                <com.itbarx.custom.component.TextViewBold
                    android:id="@+id/bark_activity_screen_reply_text_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Like"
                    android:textColor="@color/white"

                    />

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="#F48009"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="50"
        android:background="@drawable/border_bark_bottom_layout"
android:orientation="horizontal"
        android:weightSum="3"

        >
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"

            >
            <ImageView
                android:id="@+id/bark_activity_screen_like_icon_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dip"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/bark_like_icon" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"

            >
            <ImageView
                android:id="@+id/bark_activity_screen_rebark_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dip"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/bark_rebark_icon" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"

            >
            <ImageView
                android:id="@+id/bark_activity_screen_reply_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dip"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/bark_reply_icon" />
        </RelativeLayout>


    </LinearLayout>


    </LinearLayout>