<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:minHeight="70dp" android:baselineAligned="false" android:background="@color/white"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    <RelativeLayout
        android:id="@+id/row_fragment_activity_screen_user_imageView_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical|center_horizontal" >
        <ImageView
            android:id="@+id/row_fragment_activity_screen_activities_imageView"
            android:background="@android:color/white"
            android:src="@drawable/user_male_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:contentDescription="@string/row_all_fragments_user_imageView_description"
            />
        </RelativeLayout>

        <com.itbarx.custom.component.TextViewBold
            android:id="@+id/row_fragment_activity_screen_activities_fullName_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/row_fragment_activity_screen_user_imageView_container"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:text="full name"
            />
        <com.itbarx.custom.component.TextViewRegular
            android:id="@+id/row_fragment_activity_screen_activities_action_textView"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/row_fragment_activity_screen_activities_fullName_textView"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="liked your bark"
            android:layout_marginLeft="5dp"
            android:textColor="@color/fragment_orange_button"
            android:layout_centerInParent="true"



            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignBottom="@+id/row_fragment_activity_screen_user_imageView_container"
            android:background="@color/editprofile_activity_icons_bg" />


    </RelativeLayout>


</LinearLayout>
