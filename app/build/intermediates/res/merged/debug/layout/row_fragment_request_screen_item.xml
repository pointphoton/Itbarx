<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:minHeight="70dp"
              android:baselineAligned="false"
              android:background="@color/white"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

        <RelativeLayout
            android:id="@+id/row_fragment_request_screen_user_imageView_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical|center_horizontal" >
        <ImageView
            android:id="@+id/row_fragment_request_screen_user_imageView"
            android:background="@android:color/white"
            android:src="@drawable/user_male_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/row_all_fragments_user_imageView_description"
            />
            </RelativeLayout>

        <com.itbarx.custom.component.TextViewBold
            android:id="@+id/row_fragment_request_screen_fullName_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/row_fragment_request_screen_user_imageView_container"

            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:text="full name"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:weightSum="3"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="25dp"
                android:gravity="center_vertical|center_horizontal" >

                <ImageButton
                    android:id="@+id/row_fragment_request_screen_follow_imageButton"
                    android:src="@drawable/req_icon_unfollow"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="25dp"
                android:gravity="center_vertical|center_horizontal" >

                <ImageButton
                    android:id="@+id/row_fragment_request_screen_ok_imageButton"
                    android:src="@drawable/req_icon_request_ok"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="20dp"
                android:gravity="center_vertical|center_horizontal" >

                <ImageButton
                    android:id="@+id/row_fragment_request_screen_deny_imageButton"
                    android:src="@drawable/req_icon_request_deny"
                    android:background="@color/white"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"

                    />
            </RelativeLayout>



        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"

            android:layout_alignBottom="@+id/row_fragment_request_screen_user_imageView_container"
            android:background="@color/editprofile_activity_icons_bg" />
    </RelativeLayout>


</LinearLayout><!-- From: file:/G:/SSD_Develop/ProjectFiles/Itbarx/app/src/main/res/layout/row_fragment_request_screen_item.xml -->