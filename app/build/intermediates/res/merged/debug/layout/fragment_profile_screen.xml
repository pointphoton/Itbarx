<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/tab_fragment_fifth_profile_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    android:weightSum="530"
    >

    <LinearLayout
        android:id="@+id/profile_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="50"
        android:background="@color/toolbar_bg"
        android:orientation="horizontal"
        android:weightSum="10">

        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="8">

            <com.itbarx.custom.component.TextViewRegular
                android:id="@+id/profile_fragment_screen_toolbar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="@string/profile_fragment_screen_toolbar_text"
                android:textColor="@color/white"
               />
        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="5"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/profile_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="475"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="34">

        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:visibility="invisible"/>

        <LinearLayout
            android:id="@+id/profile_fragment_content"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="33"
            android:orientation="vertical"
            android:weightSum="475">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="135"
                android:orientation="vertical"
                android:weightSum="135"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="95"
                    android:orientation="horizontal"
                    android:weightSum="34">

                    <View
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:visibility="invisible"/>

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="5">

                        <ImageView
                            android:id="@+id/profile_fragment_screen_user_photo_imageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/user_male_icon"/>
                    </RelativeLayout>


                    <View
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:visibility="invisible"/>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="28"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <com.itbarx.custom.component.TextViewBold
                            android:id="@+id/profile_fragment_screen_username_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:lines="1"
                            android:text="@string/profile_fragment_screen_userinfo_name_text"

                            android:textSize="@dimen/createnewuser_secreen_useragreement_text_size"/>

                        <com.itbarx.custom.component.TextViewRegular
                            android:id="@+id/profile_fragment_screen_place_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:lines="1"
                            android:text="@string/profile_fragment_screen_userinfo_place_text"

                            android:textSize="@dimen/createnewuser_secreen_useragreement_text_size"/>

                        <com.itbarx.custom.component.TextViewRegular
                            android:id="@+id/profile_fragment_screen_user_bio_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:lines="2"
                            android:text="@string/profile_fragment_screen_userinfo_personalinfo_text"

                            android:textSize="@dimen/small_text_size"/>

                        <com.itbarx.custom.component.TextViewBold
                            android:id="@+id/profile_fragment_screen_itBarkUserName_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:lines="1"
                            android:text="@string/profile_fragment_screen_userinfo_atmail_text"
                            android:textColor="@color/create_new_user_button_done_bg"

                            android:textSize="@dimen/createnewuser_secreen_useragreement_text_size"/>

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/profile_fragment_screen_buttons_container"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="40"
                    android:background="@drawable/border_row_timeline_fragment_buttons"
                    android:orientation="horizontal"
                    android:weightSum="3">


                    <LinearLayout
                        android:id="@+id/profile_fragment_screen_like_count_button_container"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:orientation="vertical"
                        android:weightSum="7"

                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="4"
                            android:gravity="center_horizontal"
                            >

                            <com.itbarx.custom.component.TextViewBold
                                android:id="@+id/profile_fragment_screen_barks_count_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:text="106"
                                android:textColor="#666666"

                                />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="0.5"
                            />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="2.5"
                            android:gravity="center_vertical|center_horizontal"
                            >

                            <com.itbarx.custom.component.TextViewRegular
                                android:id="@+id/profile_fragment_screen_barks_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:text="@string/profile_fragment_screen_imagebutton_barks_text"
                                android:textColor="#666666"

                                />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/profile_fragment_screen_followers_count_button_container"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:orientation="vertical"
                        android:weightSum="7"

                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="4"
                            android:gravity="center_horizontal"
                            >

                            <com.itbarx.custom.component.TextViewBold
                                android:id="@+id/profile_fragment_screen_followers_count_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:text="33"
                                android:textColor="#666666"

                                />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="0.5"
                            />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="2.5"
                            android:gravity="center_vertical|center_horizontal"
                            >

                            <com.itbarx.custom.component.TextViewRegular
                                android:id="@+id/profile_fragment_screen_followers_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:text="@string/profile_fragment_screen_imagebutton_followers_text"
                                android:textColor="#666666"

                                />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/profile_fragment_screen_following_count_button_container"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:orientation="vertical"
                        android:weightSum="7"

                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="4"
                            android:gravity="center_horizontal"
                            >

                            <com.itbarx.custom.component.TextViewBold
                                android:id="@+id/profile_fragment_screen_following_count_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:text="85"
                                android:textColor="#666666"

                                />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="0.5"
                            />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="2.5"
                            android:gravity="center_vertical|center_horizontal"
                            >

                            <com.itbarx.custom.component.TextViewRegular
                                android:id="@+id/profile_fragment_screen_following_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:text="@string/profile_fragment_screen_imagebutton_following_text"
                                android:textColor="#666666"

                                />
                        </RelativeLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="5"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="40"
                >


                <com.itbarx.custom.component.ButtonBold
                    android:id="@+id/profile_fragment_screen_edit_profile_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/select_orange_button"
                    android:text="@string/profile_fragment_screen_edit_profile_text"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="5"
                android:visibility="invisible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="290">
<!--
                <ListView
                    android:id="@+id/profile_fragment_screen_listView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                    -->
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:visibility="invisible"/>
    </LinearLayout>

</LinearLayout><!-- From: file:/G:/SSD_Develop/ProjectFiles/Itbarx/app/src/main/res/layout/fragment_profile_screen.xml -->