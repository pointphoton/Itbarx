<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    android:weightSum="600" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="50"
        android:background="@color/toolbar_bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/forgotpassword_activity_screen_toolbar_text"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="550"
        android:orientation="horizontal"
        android:weightSum="34" >

        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="26"
            android:orientation="vertical"
            android:weightSum="550" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="110"
                android:orientation="vertical"
                android:weightSum="11" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/activity_forgotpassword_screen_toptext_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="6"
                    android:gravity="top|left"
                    android:lines="3"
                    android:text="@string/forgotpassword_activity_screen_toptext_text"
                    android:textSize="@dimen/createnewuser_secreen_useragreement_text_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="2"
                    android:visibility="invisible" >
                </View>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_forgotpassword_activity" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:visibility="invisible" >
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="50"
                android:orientation="horizontal"
                android:weightSum="10" >

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/icons_bg_forgotpassword_activity" >

                    <ImageView
                        android:id="@+id/activity_forgotpassword_screen_email_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_email_forgot_password" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/activity_forgotpassword_screen_email_edittext"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:ems="10"
                    android:hint="@string/forgotpassword_activity_screen_email_hint_text"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/textview_userinputs_hints_forgotpassword_activity"
                    android:textSize="@dimen/small_text_size" >

                    <requestFocus />
                </EditText>
            </LinearLayout>
   <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="5"
            android:visibility="invisible" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="50"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/activity_forgotpassword_screen_sendmeemailcode_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/button_sendmeemailcode_bg_forgotpassword_activity"
                    android:text="@string/forgotpassword_activity_screen_sendemail_button_text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/createnewuser_secreen_useragreement_text_size" />

            </LinearLayout>
            <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="20"
            android:visibility="invisible" />

            <TextView
                android:id="@+id/activity_forgotpassword_screen_changepassword_text"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="20"
                android:gravity="top|left"
                android:lines="1"
                android:text="@string/forgotpassword_activity_screen_passwordchange_text"
                android:textColorLink="@color/textview_changepassword_forgotpassword_activity"
                android:textSize="@dimen/createnewuser_secreen_useragreement_text_size" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="50"
                android:orientation="horizontal"
                android:weightSum="10" >

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/icons_bg_forgotpassword_activity" >

                    <ImageView
                        android:id="@+id/activity_forgotpassword_screen_emailcode_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_email_code_forgot_password" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/activity_forgotpassword_screen_emailcode_edittext"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:ems="10"
                    android:hint="@string/forgotpassword_activity_screen_emailcode_hint_text"
                    android:inputType="text"
                    android:textColor="@color/textview_userinputs_hints_forgotpassword_activity"
                    android:textSize="@dimen/small_text_size" >

                    <requestFocus />
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="50"
                android:orientation="horizontal"
                android:weightSum="10" >

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/icons_bg_forgotpassword_activity" >

                    <ImageView
                        android:id="@+id/activity_forgotpassword_screen_password_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_re_password_forgot_password" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/activity_forgotpassword_screen_password_edittext"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:ems="10"
                    android:hint="@string/forgotpassword_activity_screen_newpassword_hint_text"
                    android:inputType="textPassword"
                    android:textColor="@color/textview_userinputs_hints_forgotpassword_activity"
                    android:textSize="@dimen/small_text_size" >

                    <requestFocus />
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="50"
                android:orientation="horizontal"
                android:weightSum="10" >

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/icons_bg_forgotpassword_activity" >

                    <ImageView
                        android:id="@+id/activity_forgotpassword_screen_repassword_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_re_password_forgot_password" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/activity_forgotpassword_screen_repassword_edittext"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:ems="10"
                    android:hint="@string/forgotpassword_activity_screen_newrepassword_hint_text"
                    android:inputType="textPassword"
                    android:textColor="@color/textview_userinputs_hints_forgotpassword_activity"
                    android:textSize="@dimen/small_text_size" >

                    <requestFocus />
                </EditText>
            </LinearLayout>
            <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="10"
            android:visibility="invisible" />
            
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="50"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/activity_forgotpassword_screen_change_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/button_change_bg_forgotpassword_activity"
                    android:text="@string/forgotpassword_activity_screen_change_button_text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/createnewuser_secreen_useragreement_text_size" />

            </LinearLayout>
              <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="54.5"
            android:visibility="invisible" />
            
        </LinearLayout>

        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout><!-- From: file:/G:/SSD_Develop/ProjectFiles/Itbarx/app/src/main/res/layout/activity_forgot_password_screen.xml -->