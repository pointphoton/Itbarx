        <com.itbarx.custom.component.TextViewRegular
            android:id="@+id/forgot_password_activity_screen_toolbar_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/forgotpassword_activity_screen_toolbar_text"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="550"
        android:orientation="horizontal"
        android:weightSum="34" >

        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="26"
            android:orientation="vertical"
            android:weightSum="550" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="110"
                android:orientation="vertical"
                android:weightSum="11" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:visibility="invisible" />

                <com.itbarx.custom.component.TextViewRegular
                    android:id="@+id/forgot_password_activity_screen_info_textView"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="6"
                    android:gravity="top|left"
                    android:lines="3"
                    android:text="@string/forgotpassword_activity_screen_toptext_text"
                    android:textColor="@color/forgot_password_activity_info_text"
                  />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="2"
                    android:visibility="invisible" >
                </View>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/forgot_password_activity_line" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:visibility="invisible" >
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="50"
                android:orientation="horizontal"
                android:weightSum="10"
                android:background="@drawable/border_editboxes"

                >

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@color/icons_bg"
                    >

                    <ImageView
                        android:id="@+id/forgot_password_activity_screen_email_imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:padding="9dip"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_email_forgot_password" />
                </RelativeLayout>

                      <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="8.5"
                android:background="@color/white"
                android:gravity="left|center_vertical" >

                <com.itbarx.custom.component.EditTextRegular
                    android:id="@+id/forgot_password_activity_screen_eMail_editText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:hint="@string/forgotpassword_activity_screen_email_hint_text"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:textColor="@color/texts_editText"
                    android:textColorHint="@color/hints_editText"
                    >

                    <requestFocus />
                </com.itbarx.custom.component.EditTextRegular>
                </RelativeLayout>
            </LinearLayout>
   <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="5"
            android:visibility="invisible" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="50"
                android:orientation="horizontal" >

                <com.itbarx.custom.component.ButtonBold
                    android:id="@+id/forgot_password_activity_screen_sendMe_eMailCode_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/select_dark_orange_button"
                    android:text="@string/forgotpassword_activity_screen_sendemail_button_text"
                    android:textColor="@color/white"
                    />

            </LinearLayout>
            <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="15"
            android:visibility="invisible" />

            <com.itbarx.custom.component.TextViewBold
                android:id="@+id/forgot_password_activity_screen_change_password_text"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="25"
                android:layout_marginLeft="5dp"
                android:gravity="top|left"
                android:lines="1"
                android:text="@string/forgotpassword_activity_screen_passwordchange_text"
                android:textColor="@color/forgot_password_activity_change_password_text"
              />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="150"
                android:orientation="vertical"
                android:weightSum="301"
                android:background="@drawable/border_editboxes"
                >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="99"
                android:orientation="horizontal"
                android:weightSum="10" >

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@color/icons_bg" >

                    <ImageView
                        android:id="@+id/forgot_password_activity_screen_eMailCode_imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:padding="9dip"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_email_code_forgot_password" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="8.5"
                    android:background="@color/white"
                    android:gravity="left|center_vertical" >

                <com.itbarx.custom.component.EditTextRegular
                    android:id="@+id/forgot_password_activity_screen_eMailCode_editText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                   android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:textColor="@color/texts_editText"
                    android:textColorHint="@color/hints_editText"
                    android:hint="@string/forgotpassword_activity_screen_emailcode_hint_text"

                  >

                    <requestFocus />
                </com.itbarx.custom.component.EditTextRegular>
                </RelativeLayout>
            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="2"
                    android:background="#E9E9E9"
                    android:visibility="visible"
                    />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="99"
                android:orientation="horizontal"
                android:weightSum="10" >

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@color/icons_bg" >

                    <ImageView
                        android:id="@+id/forgot_password_activity_screen_newPassword_imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:padding="9dip"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_re_password_forgot_password" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="8.5"
                    android:background="@color/white"
                    android:gravity="left|center_vertical" >
                <com.itbarx.custom.component.EditTextRegular
                    android:id="@+id/forgot_password_activity_screen_newPassword_editText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:textColor="@color/texts_editText"
                    android:textColorHint="@color/hints_editText"
                    android:hint="@string/forgotpassword_activity_screen_newpassword_hint_text"
                                     >

                    <requestFocus />
                </com.itbarx.custom.component.EditTextRegular>
                </RelativeLayout>
            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="2"
                    android:background="#E9E9E9"
                    android:visibility="visible"
                    />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="99"
                android:orientation="horizontal"
                android:weightSum="10" >

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@color/icons_bg" >

                    <ImageView
                        android:id="@+id/forgot_password_activity_screen_rePassword_imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:padding="9dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_re_password_forgot_password" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="8.5"
                    android:background="@color/white"
                    android:gravity="left|center_vertical" >
                <com.itbarx.custom.component.EditTextRegular
                    android:id="@+id/forgot_password_activity_screen_rePassword_editText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:textColor="@color/texts_editText"
                    android:textColorHint="@color/hints_editText"
                    android:hint="@string/forgotpassword_activity_screen_newrepassword_hint_text"

                                      >
                    <requestFocus />
                </com.itbarx.custom.component.EditTextRegular>
                </RelativeLayout>
            </LinearLayout>
            </LinearLayout>




            <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="10"
            android:visibility="invisible" />
            
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="50"
                android:orientation="horizontal" >

                <com.itbarx.custom.component.ButtonBold
                    android:id="@+id/forgot_password_activity_screen_change_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/select_dark_orange_button"
                    android:text="@string/forgotpassword_activity_screen_change_button_text"
                    android:textColor="@color/white"
                     />

            </LinearLayout>
              <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="54.5"
            android:visibility="invisible" />
            
        </LinearLayout>

        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:visibility="invisible" />
    </LinearLayout>

