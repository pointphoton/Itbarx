<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    android:weightSum="620" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="50"
        android:background="@color/toolbar_bg"
        android:orientation="horizontal"
        android:weightSum="10" >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/activity_createnewaccount_screen_toolbar_leftarrow_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_left_arrow_createnewaccount" />
        </RelativeLayout>

        
        <com.itbarx.custom.component.CustOpenBoldTextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="@string/createnewaccount_activity_screen_toolbar_text"
            android:textColor="@color/white" />

        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="110"
        android:orientation="vertical"
        android:weightSum="11" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="7"
            android:orientation="horizontal"
            android:weightSum="13" >

            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5" />

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="3" >

                <ImageView
                    android:id="@+id/activity_createnewaccount_screen_addphoto_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/imageview_addphoto_bg_createnewuser_activity"
                    android:clickable="@bool/choose_true" />

                <TextView
                    android:id="@+id/activity_createnewaccount_screen_addphoto_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="@bool/choose_true"
                    android:maxLines="3"
                    android:text="@string/createnewaccount_activity_screen_addphoto_text" />
            </RelativeLayout>

            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="2" >
        </View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="50"
        android:orientation="horizontal"
        android:weightSum="10" >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2" >

            <ImageView
                android:id="@+id/activity_createnewaccount_screen_name_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_user_createnewaccount" />
        </RelativeLayout>

        <EditText
            android:id="@+id/activity_createnewaccount_screen_name_edittext"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:ems="10"
            android:hint="@string/createnewaccount_activity_screen_name_text"
            android:inputType="textPersonName"
            android:textSize="@dimen/createnewuser_secreen_useragreement_text_size" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="50"
        android:orientation="horizontal"
        android:weightSum="10" >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2" >

            <ImageView
                android:id="@+id/activity_createnewaccount_screen_email_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_email_createnewaccount" />
        </RelativeLayout>

        <EditText
            android:id="@+id/activity_createnewaccount_screen_email_edittext"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:ems="10"
            android:hint="@string/createnewaccount_activity_screen_email_text"
            android:inputType="textPersonName"
            android:textSize="@dimen/login_secreen_login_button_text_size" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="50"
        android:orientation="horizontal"
        android:weightSum="10" >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2" >

            <ImageView
                android:id="@+id/activity_createnewaccount_screen_password_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_password_createnewaccount" />
        </RelativeLayout>

        <EditText
            android:id="@+id/activity_createnewaccount_screen_password_edittext"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:ems="10"
            android:hint="@string/createnewaccount_activity_screen_password_text"
            android:inputType="textPersonName"
            android:textSize="@dimen/login_secreen_login_button_text_size" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="50"
        android:orientation="horizontal"
        android:weightSum="10" >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2" >

            <ImageView
                android:id="@+id/activity_createnewaccount_screen_repassword_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_repassword_createnewaccount" />
        </RelativeLayout>

        <EditText
            android:id="@+id/activity_createnewaccount_screen_repassword_edittext"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:ems="10"
            android:hint="@string/createnewaccount_activity_screen_repassword_text"
            android:inputType="textPersonName"
            android:textSize="@dimen/login_secreen_login_button_text_size" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="35"
        android:orientation="horizontal"
        android:weightSum="10" >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2" >

            <ImageView
                android:id="@+id/activity_createnewuser_screen_useragreement_unchecked_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_user_agreement_not_checked" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="left|center"
            android:layout_weight="8"
            android:gravity="left|center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/activity_createnewuser_screen_iagreetothe_plaintext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"               
                android:layout_weight="0"
                android:text="@string/createnewaccount_activity_screen_iagreetothe_text"
                android:textSize="@dimen/createnewuser_secreen_useragreement_text_size" />

            <TextView
                android:id="@+id/activity_createnewuser_screen_useragreement_plaintext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"               
                android:layout_weight="1"
                android:clickable="@bool/choose_true"
                android:text="@string/createnewaccount_activity_screen_useragreement_text"
                android:textSize="@dimen/createnewuser_secreen_useragreement_text_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="35"
        android:orientation="horizontal"
        android:weightSum="10" >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2" >

            <ImageView
                android:id="@+id/activity_createnewuser_screen_useragreement_checked_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_remember_me_checked_createnewaccount" />
        </RelativeLayout>

        <TextView
            android:id="@+id/activity_createnewuser_screen_remembermeafterregister_plaintext"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="8"
            android:ems="10"
            android:text="@string/createnewaccount_activity_screen_remembermeafterregister_text"
            android:textSize="@dimen/createnewuser_secreen_useragreement_text_size" />

    </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="50" >

        <Button
            android:id="@+id/activity_createnewuser_screen_done_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/button_done_bg_createnewuser_activity"
            android:text="@string/createnewaccount_activity_screen_done_button_text"
            android:textColor="@color/white" />
    </LinearLayout>

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="40" >

        <TextView
            android:id="@+id/activity_createnewuser_screen_or_plaintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:ems="10"
            android:text="@string/createnewaccount_activity_screen_or_text"
            android:textColor="@color/text_or" />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="50"
        android:orientation="horizontal"
        android:weightSum="345" >

        <Button
            android:id="@+id/activity_createnewuser_screen_facebook_button"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="165"
            android:background="@color/button_facebook_bg"
            android:text="@string/createnewaccount_activity_screen_facebook_button_text"
            android:textColor="@color/white" />

        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="15" />

        <Button
            android:id="@+id/activity_createnewuser_screen_twitter_button"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="165"
            android:background="@color/button_twitter_bg"
            android:text="@string/createnewaccount_activity_screen_twitter_button_text"
            android:textColor="@color/white"
            android:textSize="@dimen/login_secreen_login_button_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="50" >
    </View>

</LinearLayout><!-- From: file:/G:/SSD_Develop/ProjectFiles/Itbarx/app/src/main/res/layout/activity_create_new_account_screen2.xml -->