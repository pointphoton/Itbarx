<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/basicinfo_name_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    android:weightSum="600"
    tools:ignore="MissingPrefix" >

    <RelativeLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="50"
        android:background="@color/toolbar_bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/login_activity_screen_toolbar_text"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_toolbar" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/container_layout"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="550"
        android:orientation="horizontal"
        android:weightSum="34" >

        <View
            android:id="@+id/left_space"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="33"
            android:orientation="vertical"
            android:weightSum="550" >

            <LinearLayout
                android:id="@+id/logo_layout"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="100"
                android:orientation="vertical"
                android:weightSum="10" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3" >
                </View>

                <ImageView
                    android:id="@+id/login_activity_screen_login_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="4"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo_itbarx_login" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="3" >
                </View>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/username_password_boxes_layout"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="100"
                android:background="@color/white"
                android:orientation="vertical"
                android:weightSum="2" >

                <LinearLayout
                    android:id="@+id/username_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:background="@drawable/border_top_editboxes_layout"
                    android:orientation="horizontal"
                    android:weightSum="10" >

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:background="@color/login_activity_icons_bg" >

                        <ImageView
                            android:id="@+id/login_activity_screen_username_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_username_login" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="8.5"
                        android:background="@color/white"
                        android:gravity="left|center_vertical" >

                        <EditText
                            android:id="@+id/login_activity_screen_username_edittext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:ems="10"
                            android:hint="@string/login_activity_screen_username_text"
                            android:inputType="textPersonName"
                            android:paddingLeft="10dp"
                            android:textColor="@color/editprofile_activity_hints_edittext"
                            android:textSize="@dimen/text_size_editbox"
                            android:text="user5">
                            <requestFocus />
                        </EditText>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:background="@drawable/border_inner_editboxes_layout"
                    android:orientation="horizontal"
                    android:weightSum="10" >

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:background="@color/login_activity_icons_bg" >

                        <ImageView
                            android:id="@+id/login_activity_screen_password_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_password_login" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="8.5"
                        android:background="@color/white"
                        android:gravity="left|center_vertical" >

                        <EditText
                            android:id="@+id/login_activity_screen_password_edittext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:ems="10"
                            android:hint="@string/login_activity_screen_password_text"
                            android:inputType="textPersonName"
                            android:paddingLeft="10dp"
                            android:textColor="@color/editprofile_activity_hints_edittext"
                            android:textSize="@dimen/text_size_editbox"
                            android:text="test">
                             <requestFocus />
                        </EditText>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="40"
                android:orientation="horizontal"
                android:weightSum="10" >

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2" >

                    <ImageView
                        android:id="@+id/login_activity_screen_rememberme_unchecked_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_remember_me_not_checked_login" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/login_activity_screen_rememberme_plaintext"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="8"
                    android:ems="10"
                    android:text="@string/login_activity_screen_rememberme_text"
                    android:textSize="@dimen/login_text_size_remember" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="10" >
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="50"
                android:orientation="horizontal"
                android:weightSum="345" >

                <LinearLayout
                    android:id="@+id/forgotpassword_button_layout"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="165"
                    android:background="@drawable/login_activity_forgotpassword_button_border" >

                    <Button
                        android:id="@+id/login_activity_screen_forgotpassword_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/login_activity_button_forgotpassword_bg"
                        android:text="@string/login_activity_screen_forgotpassword_button_text"
                        android:textColor="@color/login_activity_button_forgotpassword_text"
                        android:textSize="@dimen/text_size_button" />
                </LinearLayout>

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="15" />

                <LinearLayout
                    android:id="@+id/login_button_layout"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="165"
                    android:background="@drawable/login_activity_loginbutton_border" >

                    <Button
                        android:id="@+id/login_activity_screen_login_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/login_activity_button_login_bg"
                        android:text="@string/login_activity_screen_login_button_text"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_button" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="10" >
            </View>

            <LinearLayout
                android:id="@+id/createnewaccount_button_layout"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="50"
                android:background="@drawable/login_activity_createnewuser_button_border" >

                <Button
                    android:id="@+id/login_activity_screen_createnewaccount_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/login_activity_button_createnewaccount_bg"
                    android:text="@string/login_activity_screen_createnewaccount_button_text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_button" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/login_activitry_or_layout"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="40"
                android:orientation="horizontal"
                android:weightSum="34" >

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:visibility="invisible" >
                </View>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="4" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#c0c0c0"
                       android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"/>
                    
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="6" >

                    <TextView
                        android:id="@+id/login_activity_screen_or_plaintext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:ems="10"
                        android:gravity="center"
                        android:text="@string/login_activity_screen_or_text"
                        android:textColor="@color/login_activity_text_or"
                        android:textSize="@dimen/login_text_size_or" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="4" >

                   <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#c0c0c0"
                       android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"/>
                </RelativeLayout>

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:visibility="invisible" >
                </View>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="50"
                android:orientation="horizontal"
                android:weightSum="345" >

                <LinearLayout
                    android:id="@+id/facebook_button_layout"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="165"
                    android:background="@drawable/login_activity_facebook_button_border" >

                    <Button
                        android:id="@+id/login_activity_screen_facebook_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/button_facebook_bg"
                        android:text="@string/login_activity_screen_facebook_button_text"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_button" />
                </LinearLayout>

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="15" />

                <LinearLayout
                    android:id="@+id/twitter_button_layout"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="165"
                    android:background="@drawable/login_activity_twitter_button_border" >

                    <Button
                        android:id="@+id/login_activity_screen_twitter_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/button_twitter_bg"
                        android:text="@string/login_activity_screen_twitter_button_text"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_button" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="100" >
            </View>
        </LinearLayout>

        <View
            android:id="@+id/rigth_space"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout><!-- From: file:/G:/SSD_Develop/ProjectFiles/Itbarx/app/src/main/res/layout/activity_login_screen.xml -->